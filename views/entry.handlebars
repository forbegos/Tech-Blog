<div class="row">
  <div class="col-auto">
    <h2>New Entry</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog Entry:</h3>

    <form class="form new-entry-form">
      <div class="form-group">
        <label for="entry-title">Title</label>
        <input
          class="form-input"
          type="text"
          id="entry-title"
          name="entry-title"
        />
      </div>
      <div class="form-group">
        <label for="entry-content">content:</label>
        <textarea
          class="form-input"
          id="entry-content"
          name="entry-content"
        ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>


<script src="./js/entry.js"></script>