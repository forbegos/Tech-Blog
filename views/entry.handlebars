<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog Entry:</h3>

    <form class="form new-entry-form">
      <div class="mb-3">
        <label for="entry-title" class="form-label">Title</label>
        <input
          class="form-control"
          type="text"
          id="entry-title"
          name="entry-title"
        />
      </div>
      <div class="mb-3">
        <label for="entry-content" class="form-label">content:</label>
        <textarea
          class="form-control"
          placeholder="Enter the body of your entry here"
          id="entry-content"
          name="entry-content"
          style="height: 200px"
        ></textarea>
      </div>
      <div >
        <button type="submit" class="btn btn-primary ">Create</button>
      </div>
    </form>
  </div>


<script src="./js/entry.js"></script>